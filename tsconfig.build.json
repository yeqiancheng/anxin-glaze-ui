{
  "compilerOptions": {
    "outDir": "dist", // 输出目录
    "module": "esnext", // 模块系统
    "target": "es2015", // 目标 JavaScript 版本
    "declaration": true, // 生成类型声明文件
    "jsx": "react-jsx", // JSX 处理方式
    "lib": ["es2015", "dom", "esnext"], // 包含的库定义
    "moduleResolution": "node", // 模块解析策略
    "allowSyntheticDefaultImports": true, // 允许默认导入
    "skipLibCheck": true // 跳过库文件类型检查
  },
  "include": ["src"], // 包含的文件
  "exclude": ["src/**/*.test.tsx", "src/**/*.stories.tsx", "src/setupTests.ts"] // 排除的文件
}
